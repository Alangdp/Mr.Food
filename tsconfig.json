{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2023",
      "DOM"
    ],
    "module": "node16",
    "rootDir": ".", // Ajustado para o diret√≥rio raiz do projeto
    "paths": {
      "*": [
        "./types/*.d.ts"
      ]
    },
    "allowImportingTsExtensions": false,
    "outDir": "./dist",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "./dist"
  ],
  "include": [
    "./src/**/*",
    "./types",
    "./**/*.d.ts"
  ]
}